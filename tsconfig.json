{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}